@{
    Layout = "_LayoutUser";
}

@model PaginatedList<Product>

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<body>
    <section class="py-5">
        <form asp-action="Search" asp-route-currentFilter="@ViewData["CurrentFilter"]" method="get">
        <div style="float:right;padding-right: 3rem!important;">
            <span>Sort by: </span>
                <select class="form-select" onchange="this.form.submit()" name="sortOrder" asp-for="@ViewData["SortParm"]" aria-label="Default select example" style="display: unset;width: auto;">
                <option value="">Newest</option>
                <option value="price_desc">Price: High-Low</option>
                <option value="price_asc">Price: Low-High</option>
            </select>

        </div>
        </form>

        <a asp-route-sortOrder="@ViewData["DateSortParm"]"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           asp-action="Search">date</a>
        <a asp-route-sortOrder="@ViewData["PriceSortParm"]"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           asp-action="Search">price</a>

        <div class="container px-4 px-lg-5 mt-5">
            
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                
                @foreach (var item in Model)
                {
                    @*<form asp-action="AddToCart" method="post">*@
                    <div class="col mb-5">
                        <div class="card h-100">
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">@item.discountPercentage%</div>
                            <a asp-action="AddToCart" asp-controller="Product" asp-route-id="@item.productID">
                                <img alt="image" src="@Url.Content(item.imgURL)" style="height: 13rem;width: -webkit-fill-available">
                            </a>
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="card-title">@item.productName</h5>
                                    <input asp-for="@item.brand" style="text-align: center; border: 0;">
                                    <input asp-for="@item.price" style="text-align: center; border: 0;">
                                    @*<div class="buttons_added">
                                        <input class="minus is-form" type="button" value="-">
                                        <input  asp-for="@item.quantity" aria-label="quantity" class="input-qty" placeholder="1" type="text" min="0" max="99" name="" value="" style=" width: 3rem; text-align: center;">
                                        <input class="plus is-form" type="button" value="+">
                                    </div>*@
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    @if (!SignInManager.IsSignedIn(User))
                                    {
                                        <a class="btn btn-primary alertLogin" asp-area="Identity" asp-page="/Account/Login">
                                            Add To Cart
                                        </a>          
                                    }
                                    else{
                                        <a asp-action="AddToCart" asp-controller="Product" asp-route-id="@item.productID" class="btn btn-primary">
                                            Add To Cart
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <br />
        
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }
        <a asp-action="Search"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-primary @prevDisabled">Previous
       </a>
        <a asp-action="Search"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-primary @nextDisabled">Next
          </a>

    </section>
</body>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $('input.input-qty').each(function () {
            var $this = $(this),
                qty = $this.parent().find('.is-form'),
                min = Number($this.attr('min')),
                max = Number($this.attr('max'))
            if (min == 0) {
                var d = 0
            } else d = min
            $(qty).on('click', function () {
                if ($(this).hasClass('minus')) {
                    if (d > min) d += -1
                } else if ($(this).hasClass('plus')) {
                    var x = Number($this.val()) + 1
                    if (x <= max) d += 1
                }
                $this.attr('value', d).val(d)
            })
        })

        $(".alertLogin").click(function () {
            alert("please login before purchase")
        });

    </script>
}